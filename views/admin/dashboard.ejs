<%- include('../includes/navigation.ejs') %>

<style>
  table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
  }

  td,
  th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }

  tr:nth-child(even) {
    background-color: #dddddd;
  }
  .image-preview {
    width: 250px;
    min-height: 250px;
    border: 2px solid #dddddd;
    margin-top: 15px;

    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: #cccccc;
  }

  .image-preview__image {
    display: none;
    width: 100%;
  }

  .forms-control {
    margin: 1rem 0;
  }

  .forms-control label,
  .forms-control input,
  .forms-control textarea {
    display: block;
    width: 100%;
    margin-bottom: 0.25rem;
  }

  .btn {
    display: inline-block;
    padding: 0.25rem 1rem;
    text-decoration: none;
    font: inherit;
    border: 1px solid #00695c;
    color: #00695c;
    background: white;
    border-radius: 3px;
    cursor: pointer;
  }

  .product-form {
    width: 100rem;
    /* max-width: 100%; */
    margin: auto;
    display: block;
  }
  .products-form {
    width: 90rem;
    max-width: 100%;
    margin: auto;
    display: block;
  }
  .forms-control input,
  .forms-control textarea {
    border: 1px solid #a1a1a1;
    font: inherit;
    border-radius: 2px;
  }

  .forms-control input:focus,
  .forms-control textarea:focus {
    outline-color: #00695c;
  }

  .forms-control input.invalid {
    border-color: red;
  }
  .user-message {
    margin: auto;
    width: 90%;
    border: 1px solid #4771fa;
    padding: 0.5rem;
    border-radius: 3px;
    background: #b9c9ff;
    text-align: center;
    color: white;
  }

  .user-message--error {
    border-color: red;
    background: rgb(255, 176, 176);
    color: red;
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2><%= user.name.toUpperCase() %>'s dashboard</h2>
      <a href="/admin/edit-profile">Edit Profile</a>
      <hr style="visibility: hidden;"/>
      <table>
        <tr>
          <td>Name</td>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <td>Date of Birth</td>
          <td><%= user.Date_of_Birth %></td>
        </tr>
        <tr>
          <td>Email</td>
          <td><%= user.email %></td>
        </tr>
        <tr>
          <td>Phone Number</td>
          <td><%= user.Mobile_No %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <div class="product-img">
        <img src="/<%= user.imageUrl %>" width="250" height="250" />
      </div>
      
    </div>
    
  </div>
  <hr/ style="visibility: hidden;">

  <h2>All Product Order Details</h2>
  <% if (orders.length > 0) { %>
    <table>
        <tr>
            <th>Order ID</th>
            <th>Ordered Amount</th>
            <th>Order Status</th>
            <th>Payment Status</th>
            <th>Invoice</th>
            
          </tr>
          <%  for(let order of orders) { %>
            
            <tr>
                <td> <%= order._id %></td>
                <td><%= order.products.length %></td>
                <td><%= order.orderStatus %></td>
                <td><%= order.payment_status %></td>
                <td><a href="/orders/<%= order._id %>">Invoice</a></td>
              </tr>
 
        <% } %>
    
      </table>
    <% } else { %>
        <h1>No Order Yet.</h1>
    <% }  %>

</div>

<script>
  const inpFile = document.getElementById("Myimage");
  const previewContainer = document.getElementById("imagePreview");
  const previewImage = previewContainer.querySelector(".image-preview__image");
  const previewDefaultText = previewContainer.querySelector(
    ".image-preview__default-text"
  );

  inpFile.addEventListener("change", function () {
    const file = this.files[0];
    // console.log(file);
    if (file) {
      const reader = new FileReader();

      previewDefaultText.style.display = "none";
      previewImage.style.display = "block";

      reader.addEventListener("load", function () {
        previewImage.setAttribute("src", this.result);
      });

      reader.readAsDataURL(file);
    } else {
      previewDefaultText.style.display = null;
      previewImage.style.display = null;
      previewImage.setAttribute("src", "");
    }
  });
</script>

