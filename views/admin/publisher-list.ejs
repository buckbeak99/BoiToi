<%- include('../includes/head.ejs') %> <%- include('../includes/header.ejs') %>
<%- include('../includes/navigation.ejs') %>

<section>
    <div class="container">
        <div class="row">
            <div class="section">
                <!-- container -->
                <div class="container">
                    <!-- row -->
                    <div class="row">
    
                        <!-- section title -->
                        <div class="col-md-12">
                            <div class="section-title">
                                <h3 class="title">Publisher List</h3>
                                
                            </div>
                        </div>
             <!-- Products tab & slick -->
             <div class="col-md-12">
                <div class="row">
                    <% for(let us of users) { %>
                        <% if(us.userType === "PUBLISHER") { %>
                            <h2><%= us.name %></h2>
                            <div class="products-tabs">
                                <!-- tab -->
                                <div id="tab1" class="tab-pane active">
                                    <div class="products-slick" data-nav="#slick-nav-1">
                                        <!-- product -->
                                        <% for( let product of prods) { %>
                                            <section style="padding-left: 15px;">
                                                <div class="product">
                                                    <div class="product-img">
                                                        <img src="/<%= product.imageUrl %>" >
                                                        <!-- <div class="product-label">
                                                            <span class="sale">-30%</span>
                                                            <span class="new">NEW</span>
                                                        </div> -->
                                                    </div>
                                            
                                                        <div class="product-body">
                                                            <p class="product-category"><strong><%= product.category %></strong></p>
                                                            <h3 class="product-name"><a href="#"><%= product.name %></a></h3>
                                                            <% if (product.haveDiscount) { %>
                                                                <h4 class="product-price"><%= product.discountAmount %> TK<del class="product-old-price"> <%= product.price %> TK</del></h4>
                                                                <% } else { %>
                                                                <h4 class="product-price"><%= product.price %>TK<del class="product-old-price"></del></h4>
                                                                <% } %>
                                                                <% avgRating = product.ratingSum > 0 ?(product.ratingSum/product.reviews.length) : 0 %>
                                                                <% intAvgRating = Math.floor(avgRating) %>
                                                            <div class="product-rating">
                                                                
                                                                <% const noStar1 = 5 - intAvgRating %>
                                                                <% for(x=0;x < intAvgRating;x++) { %>
                                                                <i class="fa fa-star"></i>
                                                                  <% } %>
                                                                <% if(noStar1 > 0) { %>
                                                                <% for(x=0;x < noStar1;x++) { %>
                                                                    <i class="fa fa-star-o empty"></i>
                                                                <% } %>
                                                            <% } %>
                                                            </div>
                                                            <div class="product-btns">
                                                                <!-- <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button> -->
                                                                <button class="quick-view" onclick="location.href = '/admin/edit-product/<%= product._id %>?edit=true'"><i class="fa fa-edit"></i><span class="tooltipp">edit</span></button>
                                                                <input type="hidden" value="<%= product._id %>" name="productId">
                                                                <input type="hidden" value="<%= csrfToken  %>" name="_csrf">
                                                                <button class="quick-view" onclick="location.href = '/products/<%= product._id %>'"><i class="fa fa-eye"></i><span class="tooltipp">view</span></button>
                                                                <button class="quick-view" onclick="deleteProducts(this)"><i class="fa fa-trash"></i><span class="tooltipp">Delete</span></button>
                                                            </div>
                                                        </div>
                                                    <div class="add-to-cart">
                                                        <form action="/cart" method="post">
                                                            <input type="hidden" value="<%= product._id %>" name="productId">
                                                                <input type="hidden" value="<%= csrfToken  %>" name="_csrf">
                                                        <button class="add-to-cart-btn" type="submit"><i class="fa fa-shopping-cart"></i> Add to Cart</button>
                                                    </form>
                                                    </div>
                                                </div>
                                            </section>
                                       
                                        <% } %>	
                                        <!-- /product -->										
                                    </div>
                                    <div id="slick-nav-1" class="products-slick-nav"></div>
                                </div>  
                        <% }  %>
                        <% }  %>
                     
                </div>
            </div>
            <!-- Products tab & slick -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
            
        </div>
    </div>
     </div>    
    
    </section>  


<%- include('../includes/end.ejs') %>