<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      .image-preview {
        width: 250px;
        min-height: 250px;
        border: 2px solid #dddddd;
        margin-top: 15px;

        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        color: #cccccc;
      }

      .image-preview__image {
        display: none;
        width: 100%;
      }

      .forms-control {
        margin: 1rem 0;
      }

      .forms-control label,
      .forms-control input,
      .forms-control textarea {
        display: block;
        width: 100%;
        margin-bottom: 0.25rem;
      }

      .btn {
        display: inline-block;
        padding: 0.25rem 1rem;
        text-decoration: none;
        font: inherit;
        border: 1px solid #00695c;
        color: #00695c;
        background: white;
        border-radius: 3px;
        cursor: pointer;
      }

      .product-form {
        width: 100rem;
        /* max-width: 100%; */
        margin: auto;
        display: block;
      }
      .products-form {
        width: 90rem;
        max-width: 100%;
        margin: auto;
        display: block;
      }
      .forms-control input,
      .forms-control textarea {
        border: 1px solid #a1a1a1;
        font: inherit;
        border-radius: 2px;
      }

      .forms-control input:focus,
      .forms-control textarea:focus {
        outline-color: #00695c;
      }

      .forms-control input.invalid {
        border-color: red;
      }
      .user-message {
        margin: auto;
        width: 90%;
        border: 1px solid #4771fa;
        padding: 0.5rem;
        border-radius: 3px;
        background: #b9c9ff;
        text-align: center;
        color: white;
      }

      .user-message--error {
        border-color: red;
        background: rgb(255, 176, 176);
        color: red;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <main>
          <% if (errorMessage) { %>
          <div class="user-message user-message--error">
            <%= errorMessage %>
          </div>
          <% } %>
        </main>

        <form
          class="product-form"
          action="/admin/edit-profile"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="forms-control">
            <div class="col-sm-6">
              <label for="name">Admin Name</label>
              <input
                type="text"
                name="name"
                id="name"
                value="<%= user.name %>"
              />
              <div class="forms-control">
              <label for="email">Admin Email</label>
              <input
                type="text"
                name="email"
                id="email"
                value="<%= user.email %>"
              />
            </div>

            <div class="forms-control">
                <label for="date">Date of Birth</label>
                <input
                  type="date"
                  name="date"
                  id="date"
                  value="<%= user.date %>"
                />
              </div>
              <div class="forms-control">
                <label for="phone">Mobile Number</label>
                <input
                  type="text"
                  name="phone"
                  id="phone"
                  value="<%= user.Mobile_No %>"
                />
              </div>

              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <button class="btn" type="submit">Update Information</button>
            </div>
          </div>
          <div class="col-sm-2"></div>
          <div class="col-sm-4">
            <div class="forms-control">
              <label for="Myimage">Image</label>
              <input type="file" name="Myimage" id="Myimage" />
            </div>
            <div class="image-preview" id="imagePreview">
              <img src="" alt="image-preview" class="image-preview__image" />
              <span class="image-preview__default-text">Image Preview</span>
            </div>
          </div>
        </form>
      </div>
    </div>
    <script>
      const inpFile = document.getElementById("Myimage");
      const previewContainer = document.getElementById("imagePreview");
      const previewImage = previewContainer.querySelector(
        ".image-preview__image"
      );
      const previewDefaultText = previewContainer.querySelector(
        ".image-preview__default-text"
      );

      inpFile.addEventListener("change", function () {
        const file = this.files[0];
        // console.log(file);
        if (file) {
          const reader = new FileReader();

          previewDefaultText.style.display = "none";
          previewImage.style.display = "block";

          reader.addEventListener("load", function () {
            previewImage.setAttribute("src", this.result);
          });

          reader.readAsDataURL(file);
        } else {
          previewDefaultText.style.display = null;
          previewImage.style.display = null;
          previewImage.setAttribute("src", "");
        }
      });
    </script>
  </body>
</html>

<%- include('../includes/end.ejs') %>
